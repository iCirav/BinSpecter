{
  "name": "BinSpecter",
  "displayName": "BinSpecter",
  "description": "A full-featured hex editor: interpretation widgets, endianness toggle, bit viewer, and ANSI coloring.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:hexEditor.openFile"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hexEditor.openFile",
        "title": "Open in Hex Editor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "hexEditor.openFile",
          "when": "resourceLangId != markdown",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "hexEditor.openFile",
          "when": "resourceScheme == file",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.9.0",
    "vsce": "^2.10.0"
  },
  "dependencies": {}
}
